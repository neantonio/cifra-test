<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.groupstp.cifra.web.company.CompanyBrowse"
        focusComponent="companiesTable"
        lookupComponent="companiesTable"
        messagesPack="com.groupstp.cifra.web.company">
    <dsContext>
        <groupDatasource id="companiesDs"
                         class="com.groupstp.cifra.entity.Company"
                         view="_local">
            <query>
                <![CDATA[select e from cifra$Company e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="companiesTable"
            spacing="true">
        <filter id="filter"
                applyTo="companiesTable"
                datasource="companiesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="companiesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="inn"/>
                <column id="fullName"/>
            </columns>
            <rows datasource="companiesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="companiesTable.create"/>
                <button id="editBtn"
                        action="companiesTable.edit"/>
                <button id="removeBtn"
                        action="companiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
